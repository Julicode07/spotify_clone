---
import HomeIcon from "../icons/Home.astro";
import SearchIcon from "../icons/Search.astro";
import LibraryIcon from "../icons/Library.astro";
import AddPlaylistIcon from "../icons/AddPlaylist.astro";
import SearchPlaylistIcon from "../icons/SearchPlaylist.astro";
import RecentsIcon from "../icons/Recents.astro";
import SideMenuItem from "./SideMenuItem.astro";

import Playlists from "./Playlists.astro";
import ShowMore from "../icons/ShowMore.astro";
import { playlists } from "../lib/data";
---

<div class="flex flex-col flex-1 gap-2">
  <div class="bg-[#121212] rounded-lg p-2">
    <ul>
      <SideMenuItem href="/">
        <HomeIcon />
        Home
      </SideMenuItem>
      <SideMenuItem href="/search">
        <SearchIcon />
        Search
      </SideMenuItem>
    </ul>
  </div>

  <div class="bg-[#121212] h-full rounded-lg pt-2 px-2">
    <header class="py-[8px] px-[16px] flex items-center justify-between">
      <div>
        <button class="flex gap-3 text-white font-medium">
          <LibraryIcon />
          Your Library
        </button>
      </div>
      <div>
        <button class="flex gap-6">
          <AddPlaylistIcon />
          <ShowMore />
        </button>
      </div>
    </header>
    <div>
      <div class="flex mx-2 mt-4 gap-2">
        <span
          class="bg-[#2a2a2a] text-[#f3f3f3] rounded-full py-[6px] px-[12px] font-normal text-sm"
          >Playlists</span
        >
        <span
          class="bg-[#2a2a2a] text-[#f3f3f3] rounded-full py-[6px] px-[12px] font-normal text-sm"
          >Artists</span
        >
        <span
          class="bg-[#2a2a2a] text-[#f3f3f3] rounded-full py-[6px] px-[12px] font-normal text-sm"
          >Albums</span
        >
      </div>
    </div>
    <div
      class="flex flex-col h-[calc(100vh-310px)] overflow-y-auto scroll-menu"
    >
      <div class="px-4 pt-[7px] pb-0">
        <div class="flex justify-between">
          <button class="flex items-center">
            <SearchPlaylistIcon />
          </button>
          <button class="flex py-[8px] relative items-center">
            <span class="text-[#b3b3b3] font-normal text-sm pr-1">Recents</span>
            <RecentsIcon />
          </button>
        </div>
      </div>

      <div class="pt-[5px]">
        {playlists.map((playlist) => <Playlists playlist={playlist} />)}
